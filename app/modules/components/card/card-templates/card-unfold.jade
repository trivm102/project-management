.card-unfold.ng-animate-disabled(
    ng-click="!$event.ctrlKey && !$event.metaKey && vm.toggleFold()"
    ng-if="vm.visible('unfold') && (vm.hasTasks() || vm.hasVisibleAttachments())"
    role="button"
)
    //- by default attachments & task are folded in level 2, see also card.controller, _setVisibility
    tg-svg(
        ng-if="vm.zoomLevel == 2"
        svg-icon="{{ !vm.item.get('foldStatusChanged') ? 'icon-arrow-down' : 'icon-arrow-up' }}"
    )
    tg-svg(
        ng-if="vm.zoomLevel != 2"
        svg-icon="{{ vm.item.get('foldStatusChanged') ? 'icon-arrow-down' : 'icon-arrow-up' }}"
    )

.loading-extra(
    tg-loading="vm.item.get('loading-extra')"
 )
