    input.tag-input.hidden(
        type="text"
        placeholder="{{'COMMON.TAGS.PLACEHOLDER' | translate}}"
    )
    span.save.hidden(title="{{'COMMON.SAVE' | translate}}")
        tg-svg(svg-icon="icon-save")
